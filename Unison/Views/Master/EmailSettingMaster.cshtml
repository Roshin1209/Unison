<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
<link href="~/Content/TEST/datatables.css" rel="stylesheet" />
<script src="~/Content/TEST/datatables.js"></script>

<script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>




<script type="text/javascript">
    //Global Variables
    var GlobalId = 0;
    //Global Variables
    $(document).ready(function ()
    {
        LoadData();
    });
    //Document Ready Closed
    function fnEdit(Id) {
        debugger;
        var obj = Id;// JSON.parse(Id);
        $('#txtSenderName').val(obj.Sender_Name);
        $('#txtEmail_Address').val(obj.Sender_Email_Id);
        $('#txtPassword').val(obj.Email_Password);
        $('#txtPORT').val(obj.PORT);
        $('#txtSMTP').val(obj.SMTP);
        GlobalId = obj.Id;
        Is_Edit = true;
        $('#btnCreate').text('Update')
    }
    function fnSave()
    {
        var SenderName = $.trim($('#txtSenderName').val());
        var EmailId = $.trim($('#txtEmail_Address').val());
        var Password = $.trim($('#txtPassword').val());
        var PORT = $.trim($('#txtPORT').val());
        var SMTP = $.trim($('#txtSMTP').val());


        if (SenderName == "") {
            ALERT('Please Enter the Sender Name');
            return false;
        }
        if (EmailId == "") {
            ALERT('Please Enter the Email Id');
            return false;
        }
        if (Password == "") {
            ALERT('Please Enter the Password');
            return false;
        }
        if (PORT == "") {
            ALERT('Please Enter the PORT');
            return false;
        }
        if (SMTP == "") {
            ALERT('Please Enter the SMTP ');
            return false;
        }
        $.ajax({
            url: '@Url.Action("SaveEmailSettings", "Master")',
            data: "SenderName=" + SenderName + "&EmailId=" + EmailId + "&Password=" + Password + "&PORT=" + PORT + "&SMTP=" + SMTP + "&Id=" + GlobalId,
            type: "POST",
            success: function (resp) {
                if (resp != null) {
                    if (resp.split(':')[0] == "SUCCESS") {
                        if (GlobalId == 0) {
                            ALERT("Saved Successfuly.");
                        }
                        else {
                            ALERT("Updated Successfuly.");
                        }
                        //$('#txtSenderName').val('');
                        //$('#txtEmail_Address').val('');
                        //$('#txtPassword').val('');
                        //$('#txtPORT').val('');
                        //$('#txtSMTP').val('');
                        fncancel();
                        LoadData();
                    } else {
                        ALERT("Error");
                    }
                } else {
                    ALERT("No Data");
                }

            }
        });

    }
    function LoadData() {
        $.ajax({
            url: '@Url.Action("Load_Email_Setting", "Master")',
            //data:"Problem_Categroy="+Prob_Cat,
            type: "POST",
            success: function (resp) {
                if (resp != null) {
                    var str = "";
                    str += "<thead>";
                    str += "<tr>";
                    str += "<th>Sender  Name</th>";
                    str += "<th>Email Id</th>";
                    str += "<th>Password</th>";
                    str += "<th>PORT</th>";
                    str += "<th>SMTP</th>";
                    str += "<th>Is Active</th>";
                    str += "<th>Created By</th>";
                    str += "<th>Created date</th>";
                    str += "<th>Action</th>";
                    str += "<th>Delete</th>";
                    str += "</tr>";
                    str += "</thead>";
                    str += "<tbody>";

                    for (var l = 0; l < resp.length; l++) {
                        str += "<tr>";
                        str += "<td>" + resp[l].Sender_Name + "</td>";
                        str += "<td>" + resp[l].Sender_Email_Id + "</td>";
                        str += "<td>" + resp[l].Email_Password + "</td>";
                        str += "<td>" + resp[l].PORT + "</td>";
                        str += "<td>" + resp[l].SMTP + "</td>";
                        if (resp[l].Is_Active = 1) {
                            str += "<td>Yes</td>";
                        } else {
                            str += "<td>No</td>";
                        }

                        str += "<td>" + resp[l].Created_By + "</td>";
                        str += "<td>" + resp[l].Created_Date + "</td>";
                        var ac = JSON.stringify(resp[l]);
                        str += "<td><a href='#' onclick=fnEdit(" + ac.replace(/\ /g, "&nbsp;") + ");>Edit</a></td>";
                        str += "<td><a href='#' onclick=Delete(" + resp[l].Id + ");>Delete</a></td>";
                        str += "</tr>";
                    }
                    str += "</tbody>";
                    $('#tblData').empty();
                    $('#tblData').append(str);
                    $('#tblData').DataTable().destroy();
                    $('#tblData').DataTable(
                        {
                            dom: 'Bfrtip',
                            buttons: [
                                {
                                    extend: 'copyHtml5',
                                    className: 'btn btn-primary notika-btn-primary waves-effect',
                                    exportOptions: {
                                        columns: [0, 1, 2, 3, 4, 5, 6, 7]
                                    }
                                },
                                {
                                    extend: 'excelHtml5',
                                    className: 'btn btn-primary notika-btn-primary waves-effect',
                                    exportOptions: {
                                        columns: [0, 1, 2, 3, 4, 5, 6, 7]
                                    }
                                }
                            ]
                        }
                    );

                } else {
                    ALERT("No Data");
                }

            }
        });
    }
    function fncancel() {
        $('#txtSenderName').val('');
        $('#txtEmail_Address').val('');
        $('#txtPassword').val('');
        $('#txtPORT').val('');
        $('#txtSMTP').val('');
        GlobalId = 0;
        $('#btnCreate').text('Save');
    }
    function Delete(Id) {
         $.ajax({
            url: '@Url.Action("Delete_EmailSettingsMaster", "Master")',
            data: "Id=" + Id,
            type: "POST",
            success: function (resp) {
                LoadData();
            }
        });
    }
</script>







